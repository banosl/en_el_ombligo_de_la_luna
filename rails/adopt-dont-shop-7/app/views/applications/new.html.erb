<h1> Adoption Application </h1>

<%= form_with url: applications_path, method: :post, local: true do |form| %>
  <%= form.label :first_name, "First name:" %>
  <%= form.text_field :first_name %>
  <%= form.label :last_name, "Last name:" %>
  <%= form.text_field :last_name %>
  <%= form.label :address_1, "Address:" %>
  <%= form.text_field :address_1 %>
  <%= form.label :address_2, "Address 2:" %>
  <%= form.text_field :address_2 %>
  <%= form.label :city, "City:" %>
  <%= form.text_field :city %>
  <%= form.label :state, "State:" %>
  <%= form.text_field :state %>
  <%= form.label :zip_code, "Zip Code:" %>
  <%= form.text_field :zip_code %>
  <%= form.label :description, "Why would you make a good home?" %>
  <%= form.text_area :description %>
  <%= form.hidden_field :shelter_id, value: @shelter.id %>
  <%= form.submit "submit" %>
<% end %>